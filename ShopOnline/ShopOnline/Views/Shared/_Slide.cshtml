@model List<Model.EF.Slide>
<div class="slider">
    <div id="slider">
        <div id="mover">
            @foreach (var item in Model)
            {
                if (item.DisplayOrder == 1)
                {
                    <div id="slide-1" class="slide">
                        <div class="slider-img">
                            <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                        </div>
                        <div class="slider-text">
                            <h1>@item.FirstTitle<br><span>SALE</span></h1>
                            <h2>@item.SecondTitle</h2>
                            <div class="features_list">
                                <h4>@item.Description</h4>
                            </div>
                            <a href="@item.Link" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                }
                else
                {
                    <div class="slide">
                        <div class="slider-img">
                            <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                        </div>
                        <div class="slider-text">
                            <h1>@item.FirstTitle<br><span>SALE</span></h1>
                            <h2>@item.SecondTitle</h2>
                            <div class="features_list">
                                <h4>@item.Description</h4>
                            </div>
                            <a href="@item.Link" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                }

            }
        </div>
    </div>
    <div class="clear"></div>
</div>