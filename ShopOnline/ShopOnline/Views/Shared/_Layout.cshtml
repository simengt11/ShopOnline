<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
                </div>
                @{Html.RenderAction("_TopMenu", "Home");}
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/home"><img src="~/Resources/Client/images/logo.png" alt="" /></a>
                </div>
                @{Html.RenderAction("_ShoppingCart", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });</script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("_MainMenu", "Home");}

                <div class="search_box">
                    <form action="search" method="get">
                        <input id="txtKeyword" name="keyword" type="text" onfocus="this.value = '';" placeholder="Search"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide_header", required: false)

        </div>
        @RenderBody()

    </div>
